@model Admissionplus.Models.PaymentInitiateModel

@{
    ViewBag.Title = "SchoolPaymentRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var info = Model;
}

<!-- =================================== Privacy Start=================================== -->
<!-- headline -->
@*<div class="headline-banner privacy-bg">
        <div class="container"><h1>Contact Us</h1></div>
    </div>*@
<div class="clearfix"></div>
<!-- headline end-->
<!-- ============================ Agency List Start ================================== -->
<section class="bg-light">
    <div class="container">
        <!-- row Start -->
        <div class="row">
            <div class="col-lg-8 col-md-7">
                <div class="prc_wrap">
                    <div class="prc_wrap_header">
                        <h4 class="property_block_title">Fillup the Form</h4>
                    </div>
                    @using (Html.BeginForm("SchoolPayment", "PaymentRequest", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="prc_wrap-body">
                            <div class="row">
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <label>Name</label>
                                        @Html.TextBoxFor(x => x.name, new { @class = "form-control simple", @required = "required" })

                                        @*@Html.TextBoxFor(model => model.Name, new { @placeholder = "Name", @required = "required", @class = "form-control simple", @type = "text" })*@
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <label>Email</label>
                                        @Html.TextBoxFor(x => x.email, new { @class = "form-control simple", @required = "required" })

                                        @*@Html.TextBoxFor(model => model.name, new { @placeholder = "Email", @required = "required", @class = "form-control simple", @type = "email" })*@
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <label>Contact Number</label>
                                        @Html.TextBoxFor(x => x.contactNumber, new { @class = "form-control simple", @required = "required" })

                                        @*@Html.TextBoxFor(model => model.Name, new { @placeholder = "Name", @required = "required", @class = "form-control simple", @type = "text" })*@
                                    </div>
                                </div>

                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        <label>Address</label>
                                        @Html.TextBoxFor(x => x.address, new { @class = "form-control simple", @required = "required" })

                                        @*@Html.TextBoxFor(model => model.name, new { @placeholder = "Email", @required = "required", @class = "form-control simple", @type = "email" })*@
                                    </div>
                                </div>

                                @Html.HiddenFor(x => x.totalAmount, new { @class = "form-control simple", @required = "required" })
                                @Html.HiddenFor(x => x.InvoiceNumber, new { @class = "form-control simple", @required = "required" })
                                @Html.HiddenFor(x => x.ApplicationId, new { @class = "form-control simple", @required = "required" })

                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        <p>Amount : ₹ @info.amount</p>
                                        <p>18% GST : ₹ @info.gstAmount</p>
                                        <p>Total Payable Amount : ₹ <span style="color:forestgreen">@info.totalAmount</span></p>
                                    </div>
                                </div>

                                @*<input type="hidden" class="form-control simple" name="InvoiceNumber" value="@info.InvoiceNumber" />*@

                            </div>

                            <div class="form-group">
                                <button class="btn btn-theme" type="submit">
                                    Proceed
                                </button>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
        <!-- /row -->
    </div>
</section>
<!-- ============================ Agency List End ================================== -->
